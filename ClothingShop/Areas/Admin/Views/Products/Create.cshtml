@model ClothingShop.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4 class="m-0 font-weight-bold text-primary">Thêm mới sản phẩm</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                Tên sản phẩm
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ProductName)
                                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                Giá
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.price)
                                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Mô tả
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DecriptionPro)
                                    @Html.ValidationMessageFor(model => model.DecriptionPro, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                Loại sản phẩm
                                <div class="col-md-10">
                                    @Html.DropDownList("CategoryID", null, htmlAttributes: new
                               {
                                   @class = "form-control"
                               }
                                   )
                                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Nhà sản xuất
                                <div class="col-md-10">
                                    @Html.DropDownList("IDnsx", null, htmlAttributes: new
                               {
@class = "form-control"
                               }
                                   )
                                    @Html.ValidationMessageFor(model => model.NSX, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Hình ảnh
                                <div class="col-md-10">
                                    <input type="file" name="imageProduct" />
                                    @Html.ValidationMessageFor(model => model.ImagePro, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm sản phẩm" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                </table>
                <a href="@Url.Action("Index")" class="btn btn-primary">Trở về</a>
            </div>
        </div>
    </div>

</div>